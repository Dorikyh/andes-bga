---
import '../styles.css';
import NavBar from '../components/NavBar.jsx';
import ThemeManager from '../components/ThemeManager.jsx';
import Footer from '../components/Footer.jsx';
import { ClientRouter } from 'astro:transitions';
import { Analytics } from '@vercel/analytics/react';

// Props del layout
const {
  title = 'ANDES',
  description = 'Sitio web oficial de ANDES',
  url = 'https://andes-bga.vercel.app',
  image = '/public/pre-cones.png'
} = Astro.props;

// Concatenamos para que siempre termine en "- ANDES"
const fullTitle = title.includes('ANDES') ? title : `${title} - ANDES`;
---

<!doctype html>
<html lang="es" class="h-full dark">

  <head>
  
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>{fullTitle}</title>

    <!-- SEO bÃ¡sico -->
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={url} />

    <!-- Open Graph / Social -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:image" content={image} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png" />
    <link rel="shortcut icon" href="/favicon.png" />

    <meta name="theme-color" content="#ffffff" />
    <meta name="color-scheme" content="dark light" />

    <ClientRouter />

    <style is:inline>
      :root { --site-bg: #ffffff; --site-text:rgb(20, 20, 20); }
      html.dark { --site-bg:rgb(20, 20, 20); --site-text: #f3f4f6; }
      html, body { background-color: var(--site-bg); color: var(--site-text); }

      ::view-transition-old(#page-content),
      ::view-transition-new(#page-content) { animation: fade 0.25s ease; }
      @keyframes fade { from { opacity: 0 } to { opacity: 1 } }
      .theme-refresh { transform: translateZ(0); }
    </style>

    <script is:inline type="module">
      function applyTheme(doc = document) {
        const stored = localStorage.getItem('darkMode');
        const isDark = stored === 'true';
        doc.documentElement.classList.toggle('dark', isDark);
        doc.documentElement.style.colorScheme = isDark ? 'dark' : 'light';
        doc.querySelector('meta[name="theme-color"]')?.setAttribute('content', isDark ? '#0f172a' : '#ffffff');
      }

      applyTheme();
      document.addEventListener("astro:before-swap", (e) => applyTheme(e.newDocument));
      document.addEventListener("astro:after-swap", () => {
        applyTheme();
        window.dispatchEvent(new CustomEvent("theme:applied", { detail: { dark: document.documentElement.classList.contains('dark') } }));
      });
    </script>
  </head>

  <body class="h-full min-h-screen bg-neutral-50 dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100 overflow-x-hidden overflow-y-auto flex flex-col">
    <NavBar client:load transition:persist />
    <ThemeManager client:load transition:persist />

    <div class="w-full">
      <slot name="hero" />
    </div>

    <main id="page-content" class="flex-1 flex flex-col md:flex-row md:justify-center md:space-x-8 px-2">
      <div class="hidden md:w-1/6" />
      <div class="w-full md:w-2/3 px-2 flex flex-col items-center justify-center">
        <div class="py-9 w-full">
          <slot />
        </div>
      </div>
      <div class="hidden md:w-1/6" />
    </main>

    <Footer />
    <Analytics />
  </body>
</html>
