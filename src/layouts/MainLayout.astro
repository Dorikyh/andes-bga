---
import '../styles.css';
import NavBar from '../components/NavBar.jsx';
import ThemeManager from '../components/ThemeManager.jsx';
import Footer from '../components/Footer.jsx';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="es" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <title>ANDES</title>
    <meta name="theme-color" content="#ffffff" />
    <meta name="color-scheme" content="dark light" />
    <ClientRouter />

    <style is:inline>
      .no-theme-transition *, .no-theme-transition *::before, .no-theme-transition *::after {
        transition: none !important;
        animation: none !important;
      }

      ::view-transition-old(#page-content),
      ::view-transition-new(#page-content) {
        animation: fade 0.25s ease;
      }

      @keyframes fade { from { opacity: 0 } to { opacity: 1 } }

      :root { --site-bg: #ffffff; --site-text: #111827; }
      html.dark { --site-bg: #0f172a; --site-text: #f3f4f6; }
      html, body { background-color: var(--site-bg); color: var(--site-text); }

      .theme-refresh { transform: translateZ(0); }
    </style>

    <script is:inline type="module">
      function applyTheme(doc = document) {
        const stored = localStorage.getItem('darkMode');
        const isDark = stored === 'true';
        doc.documentElement.classList.toggle('dark', isDark);
        doc.documentElement.style.colorScheme = isDark ? 'dark' : 'light';
        doc.querySelector('meta[name="theme-color"]')?.setAttribute('content', isDark ? '#0f172a' : '#ffffff');
      }

      applyTheme();
      document.addEventListener("astro:before-swap", (e) => applyTheme(e.newDocument));
      document.addEventListener("astro:after-swap", () => {
        applyTheme();
        window.dispatchEvent(new CustomEvent("theme:applied", { detail: { dark: document.documentElement.classList.contains('dark') } }));
      });
    </script>
  </head>

  <body class="h-full min-h-screen bg-gray-50 dark:bg-neutral-900 text-gray-900 dark:text-gray-100 overflow-x-hidden overflow-y-auto flex flex-col">
    <div class="no-theme-transition">
      <NavBar client:load transition:persist />
    </div>

    <ThemeManager client:load transition:persist />

    <div class="w-full">
      <slot name="hero" />
    </div>

    <main id="page-content" class="flex-1 flex flex-col md:flex-row md:justify-center md:space-x-8 px-2">
      <div class="hidden md:w-1/6" />
      <div class="w-full md:w-2/3 px-2 flex flex-col items-center justify-center">
        <div class="py-9 w-full">
          <slot />
        </div>
      </div>
      <div class="hidden md:w-1/6" />
    </main>

    <div class="no-theme-transition">
      <Footer />
    </div>
  </body>
</html>
