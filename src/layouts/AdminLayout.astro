---
// layout minimal: slot para contenido de la página
const { title = "Admin" } = Astro.props;
---
<html lang="es" class="antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-50 dark:bg-neutral-900 text-neutral-900 dark:text-neutral-100">
    <div class="max-w-6xl mx-auto p-4">
      <header class="flex items-center justify-between mb-6">
        <h1 class="text-2xl font-bold">Panel — {title}</h1>
        <nav class="flex gap-2">
          <a href="/admin" class="px-3 py-1 rounded border">Lista</a>
          <a href="/admin/new" class="px-3 py-1 rounded bg-green-600 text-white">Nueva</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
