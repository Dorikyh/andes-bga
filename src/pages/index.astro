---
import MainLayout from '../layouts/MainLayout.astro';
import { FaUsers, FaGraduationCap, FaBullhorn } from "react-icons/fa";
import '../styles.css';
import FAQItem from "../components/FAQ.jsx";
---

<MainLayout client:load>
  <!-- HERO -->
<!-- HERO -->
<section
  slot="hero"
  class="relative w-full min-h-screen flex items-center bg-cover bg-center bg-no-repeat dark:bg-gray-900 text-gray-900 dark:text-white"
  style="background-image: url('/cones.webp');"
  id="home"
>
  <!-- Overlay semi-transparente para mejorar legibilidad -->
  <div class="absolute inset-0 bg-black/30 dark:bg-black/50"></div>

  <div class="relative max-w-full mx-auto px-6 py-32 md:py-48 flex flex-col md:flex-row items-center gap-12">
    <!-- Texto principal -->
    <div class="flex-1 flex flex-col gap-6 z-10">
      <h1 class="text-5xl md:text-6xl font-extrabold leading-tight animate-fadeIn text-white">
        Bienvenido a la <span class="text-primary">ANDES BGA</span>
      </h1>
      <p class="text-xl md:text-2xl opacity-90 animate-fadeIn delay-200 text-gray-200">
        La Asociación Nacional de Estudiantes de Secundaria de Colombia...
      </p>
      <div class="flex gap-4 mt-6 animate-fadeIn delay-400">
        <a href="#about" class="px-6 py-3 rounded-lg font-semibold bg-primary text-white hover:brightness-110 transition">
          Conócenos
        </a>
        <a href="/unirse" class="px-6 py-3 rounded-lg font-semibold bg-white dark:bg-gray-800 text-primary hover:brightness-95 transition">
          Unirme
        </a>
      </div>
    </div>

    <!-- Imagen lateral -->
    <div class="flex-1 animate-fadeIn delay-600 z-10">
      <img src="/paz.webp" alt="Estudiantes unidos" class="rounded-xl shadow-xl w-full object-cover" />
    </div>
  </div>
</section>

  <!-- ¿Qué es ANDES? -->
  <section id="about" class="py-24 dark:bg-neutral-900 text-gray-900 dark:text-gray-100">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold mb-8 animate-fadeIn">¿Qué es ANDES?</h2>
      <p class="text-lg md:text-xl max-w-3xl mx-auto opacity-90 mb-16 animate-fadeIn delay-200">
        ANDES es la Asociación Nacional de Estudiantes de Secundaria que busca representar a los jóvenes estudiantes, fomentar su participación en procesos educativos y sociales, y garantizar el respeto de sus derechos dentro y fuera del colegio.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          {icon: FaUsers, title: "Participación Estudiantil", text: "Promovemos la participación activa de los estudiantes en sus colegios y comunidades, para que tengan voz en las decisiones que los afectan."},
          {icon: FaGraduationCap, title: "Educación de Calidad", text: "Luchamos por una educación pública, gratuita y de calidad, garantizando igualdad de oportunidades para todos los estudiantes de secundaria."},
          {icon: FaBullhorn, title: "Defensa de Derechos", text: "Nos aseguramos de que los derechos estudiantiles sean respetados, denunciando injusticias y promoviendo espacios seguros dentro de los colegios."}
        ].map((item, i) => (
          <div class="flex flex-col items-center gap-4 p-6 bg-white dark:bg-neutral-800 rounded-2xl shadow-lg hover:scale-105 transition-transform animate-fadeIn delay-{400 + i*200}">
            <item.icon size={48} className="text-primary" />
            <h3 class="text-2xl font-semibold">{item.title}</h3>
            <p class="text-center opacity-90 text-gray-700 dark:text-gray-300">{item.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Preguntas Frecuentes -->
  <section class="py-24 dark:bg-neutral-900 text-gray-900 dark:text-gray-100">
    <div class="max-w-5xl mx-auto px-6">
      <h2 class="text-4xl font-bold mb-12 animate-fadeIn">Preguntas Frecuentes</h2>
      <div class="flex flex-col gap-6">
        <FAQItem client:visible question="¿Quién puede unirse a ANDES?" answer="Todos los estudiantes de secundaria de Colombia pueden participar y formar parte de la ANDES." />
        <FAQItem client:visible question="¿Qué actividades realiza la ANDES?" answer="Realizamos talleres, congresos, foros estudiantiles y campañas de derechos estudiantiles en todo el país." />
        <FAQItem client:visible question="¿Por qué es importante participar?" answer="Porque nuestra voz como estudiantes debe ser escuchada y defendida en todos los espacios educativos y sociales." />
      </div>
    </div>
  </section>
</MainLayout>
