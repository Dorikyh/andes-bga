---
import MainLayout from '../layouts/MainLayout.astro';
import { FaUsers, FaGraduationCap, FaBullhorn, FaArrowDown, FaHeart, FaHandshake, FaLightbulb } from "react-icons/fa";
import FAQItem from "../components/FAQ.jsx";
---

<MainLayout client:load>
  <!-- HERO SECTION -->
  <section
    slot="hero"
    id="home"
    class="relative w-full min-h-screen flex items-center justify-center dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-500"
  >
    <div class="relative z-10 max-w-7xl mx-auto px-6 py-20 md:py-32 flex flex-col md:mt-0 mt-8 lg:flex-row items-center gap-12">
      <!-- Contenido principal -->
      <div class="flex-1 lg:text-left space-y-8">
        <!-- Título principal con gradiente de texto -->
        <h1 class="text-4xl md:text-6xl lg:text-6xl font-bold leading-tight animate-slideInLeft">
          Bienvenido a
          <span class="block bg-clip-text text-primary bg-gradient-to-r">
            ANDES Santander
          </span>
        </h1>

        <!-- Subtítulo -->
        <p class="text-lg md:text-2xl max-w-2xl leading-relaxed animate-slideInLeft delay-200">
          La <strong class="text-primary dark:text-primary">Asociación Nacional de Estudiantes de Secundaria</strong> 
          que lucha por una educación universal de calidad y la paz.
        </p>

          <!-- Botones de acción unificados -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-slideInLeft delay-400">
            <!-- Botón Descubre más -->
            <a 
              href="#about" 
              class="group flex items-center justify-center gap-3 text-lg font-bold px-6 py-3 rounded-lg shadow-xl transition-all duration-300 transform hover:scale-105 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border-2 border-transparent hover:border-blue-500"
            >
              <FaLightbulb class="group-hover:animate-bounce text-gray-900 dark:text-gray-100" />
              <span>Descubre más</span>
            </a>

            <!-- Botón Únete ahora (mismo estilo) -->
            <a 
              href="https://chat.whatsapp.com/HMRPmy1mlD88tbhSI1oZBD" 
              class="group flex items-center justify-center gap-3 text-lg font-bold px-6 py-3 rounded-lg shadow-xl transition-all duration-300 transform hover:scale-105 bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100 border-2 border-transparent hover:border-primary"
            >
              <FaHandshake class="group-hover:animate-bounce text-gray-900 dark:text-gray-100" />
              <span>Únete ahora</span>
            </a>
          </div>



        <!-- Estadísticas -->
        <div class="flex flex-wrap justify-center lg:justify-start gap-6 pt-8 animate-fadeIn delay-600">
          <div class="text-center">
            <div class="text-4xl font-bold text-primary">500+</div>
            <div class="text-sm text-gray-500 dark:text-gray-300">Estudiantes activos</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary">5</div>
            <div class="text-sm text-gray-500 dark:text-gray-300">Colegios</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary">31</div>
            <div class="text-sm text-gray-500 dark:text-gray-300">Años de lucha</div>
          </div>
        </div>
      </div>

      <!-- Imagen lateral -->
      <div class="flex-1 relative animate-slideInRight delay-600">
        <img 
          src="/pre-cones.webp" 
          alt="Estudiantes unidos por la educación" 
          class="relative rounded-2xl shadow-2xl w-full max-w-lg mx-auto object-cover aspect-square transform transition-all duration-500"
          loading="eager"
        />
      </div>
    </div>

    <!-- Indicador de scroll -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-slow">
      <FaArrowDown class="text-2xl text-gray-400 dark:text-gray-300 hover:text-gray-600 dark:hover:text-white transition-colors cursor-pointer" />
    </div>
  </section>

  <!-- SECCIÓN: FAQ -->
  <section id="faq" class="py-24 transition-colors duration-500">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">Preguntas Frecuentes</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300">Resolvemos algunas dudas comunes sobre nuestro movimiento estudiantil.</p>
      </div>

      <div class="space-y-6">
        <FAQItem client:load question="¿Quiénes pueden unirse a ANDES?" answer="Todos los estudiantes de secundaria y jóvenes interesados en defender la educación pública pueden ser parte." />
        <FAQItem client:load question="¿Qué actividades realizan?" answer="Desde asambleas estudiantiles, talleres de formación, hasta movilizaciones por los derechos educativos." />
        <FAQItem client:load question="¿Cómo puedo participar activamente?" answer="Puedes unirte a tu comité local de ANDES o escribirnos directamente para organizar actividades en tu colegio." />
      </div>
    </div>
  </section>
</MainLayout>
