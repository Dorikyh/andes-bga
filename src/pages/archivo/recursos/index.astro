---
import Layout from "../../../layouts/MainLayout.astro";
import { MdDescription } from "react-icons/md";

const documentos = [
  { nombre: "Ley 30", url: "https://www.mineducacion.gov.co/1621/articles-86437_Archivo_pdf.pdf" },
  { nombre: "Tercer Plan Decenal", url: "https://www.mineducacion.gov.co/1780/articles-392871_recurso_1.pdf" },
  { nombre: "Pedagogía del Oprimido", url: "https://www.servicioskoinonia.org/biblioteca/general/FreirePedagogiadelOprimido.pdf" },
];
---

<Layout>
  <div class="min-h-screen w-full flex flex-col items-center justify-start py-16 px-4">
    <h1 class="text-6xl md:text-7xl font-bold mb-6 text-gray-900 dark:text-gray-100">Recursos</h1>
    <p class="max-w-2xl text-center mb-12 text-lg text-gray-700 dark:text-gray-300">
      Aquí encontrarás documentos de interés para consulta y lectura.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-6xl">
      {documentos.map((doc) => (
        <a
          href={doc.url}
          target="_blank"
          class="flex flex-col items-center p-6 rounded-2xl shadow hover:shadow-lg transition
                 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700"
        >
          <MdDescription class="text-6xl sm:text-7xl mb-3 text-indigo-600 dark:text-indigo-400" />
          <h2 class="text-xl font-semibold mb-1 text-gray-900 dark:text-gray-100 text-center">{doc.nombre}</h2>
        </a>
      ))}
    </div>
  </div>
</Layout>
