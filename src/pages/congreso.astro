---
// src/pages/programa.astro
import Layout from "../layouts/MainLayout.astro";
import Countdown from "../components/Countdown.tsx";
import AllDevicesMap from '../components/AllDevicesMap.jsx';
import ImageSlider from '../components/ImageSlider.astro';
import ProgramSchedule from '../components/ProgramSchedule.jsx';
import { FaFileAlt } from "react-icons/fa";
---
<!doctype html>
<html lang="es" class="antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Programa CONES 2025</title>
  </head>
  <body class="text-gray-900 dark:text-gray-100">
    <Layout>
      <section class="max-w-6xl mx-auto pt-20 px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="relative bg-cover bg-center rounded-2xl shadow-lg mb-8" style="background-image: url('/cones.webp');">
          <div class="bg-black/50 rounded-2xl px-6 py-16 text-center">
            <h1 class="text-5xl md:text-6xl font-bold text-white drop-shadow-lg">Programa CONES 2025</h1>
            <p class="text-gray-100 mt-4 max-w-3xl mx-auto">
              Noveno Congreso Nacional de Estudiantes de Secundaria: actividades, paneles y talleres 
              para fortalecer la educación, cultura y participación juvenil.
            </p>
          </div>
        </div>

        <!-- Slider -->
        <ImageSlider />

        <!-- Mapa (React-only) -->
        <!-- <AllDevicesMap client:only="react" apiPath="/api/locations" pollInterval={5000} /> -->

        <h2 class="md:text-5xl text-4xl font-bold mt-8 text-center">Falta poco para el CONES</h2>
        <div class="mt-8">
          <Countdown client:load />
        </div>

        <div class="md:flex text-center justify-center my-8">
          <a
            href="https://drive.google.com/file/d/1WgCVjl9BK6jOh9gGutP5RTZ4BytBMhUH/view"
            class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white font-semibold rounded-2xl shadow-md hover:bg-blue-700 transition md:mr-4 mb-4 md:mb-0"
          >
            <FaFileAlt class="text-lg" />
            Ver programa completo
          </a>
                    <a
            href="https://drive.google.com/file/d/1spioBT1hUHqLds0DWD0hIqp3DY5SGLPs/view"
            class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white font-semibold rounded-2xl shadow-md hover:bg-blue-700 transition"
          >
            <FaFileAlt class="text-lg" />
            Ver metodologías
          </a>
        </div>

        <!-- Componente con tarjetas clickeables + modal -->
        <ProgramSchedule client:load />

      </section>
    </Layout>
  </body>
</html>
